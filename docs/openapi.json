{
  "openapi": "3.0.1",
  "info": {
    "title": "Gift Exchange API",
    "description": "API para registrar participantes en el juego de intercambio de regalos por Nochebuena. Utiliza roles y credenciales para acceder a los diferentes endpoints de la API.",
    "contact": {
      "name": "Equipo de desarrollo",
      "email": "support@gitfexchange.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://gitfexchange.com/api/license"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Generated server url"
    }
  ],
  "paths": {
    "/participants/register": {
      "post": {
        "tags": ["Participantes"],
        "summary": "Registrar nuevo participante",
        "description": "Permite a un usuario registrarse como participante en el intercambio de regalos",
        "operationId": "registerParticipant",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterParticipantRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ParticipantResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearer-key": []
          }
        ]
      }
    },
    "/auth/register": {
      "post": {
        "tags": ["Autenticaci贸n"],
        "summary": "Registrar un nuevo usuario",
        "operationId": "save",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterUserRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Autenticaci贸n"],
        "summary": "Iniciar sesi贸n con un usuario existente",
        "operationId": "login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          }
        }
      }
    },
    "/assignments": {
      "post": {
        "tags": ["Asignaciones"],
        "summary": "Asignar destinatarios de regalos aleatoriamente",
        "description": "Asigna aleatoriamente destinatarios de regalos a todos los participantes del intercambio",
        "operationId": "assignGiftRecipients",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "security": [
          {
            "bearer-key": []
          }
        ]
      }
    },
    "/participants/assigned": {
      "get": {
        "tags": ["Participantes"],
        "summary": "Obtener participante asignado",
        "description": "Obtiene la informaci贸n del participante al que se le debe entregar un regalo",
        "operationId": "assignedParticipant",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/GiftRecipientResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearer-key": []
          }
        ]
      }
    },
    "/assignments/list": {
      "get": {
        "tags": ["Asignaciones"],
        "summary": "Listar todas las asignaciones de regalos",
        "description": "Devuelve una lista de todos los participantes y sus destinatarios de regalos asignados",
        "operationId": "listGiftRecipients",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/GiftRecipientResponse"
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "bearer-key": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "RegisterParticipantRequest": {
        "required": ["email", "name"],
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        }
      },
      "ParticipantResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        }
      },
      "RegisterUserRequest": {
        "required": ["email", "password", "repassword", "username"],
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "repassword": {
            "type": "string"
          }
        }
      },
      "UserResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "LoginRequest": {
        "required": ["password", "username"],
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "token": {
            "type": "string"
          }
        }
      },
      "GiftRecipientResponse": {
        "type": "object",
        "properties": {
          "sender": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "receiver": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearer-key": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
